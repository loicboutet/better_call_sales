<% content_for :title, "Mon Profil - WeSales" %>

<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8 flex items-center justify-between">
    <h1 class="text-3xl font-bold" style="color: var(--dark-purple);">Mon Profil</h1>
    <%= link_to "Modifier", manager_edit_profil_path, class: "px-4 py-2 border border-transparent rounded-md text-sm font-medium text-white hover:opacity-90", style: "background-color: var(--light-orange);" %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
    <div class="md:col-span-1">
      <div class="bg-white rounded-lg shadow border border-gray-100 p-6 text-center">
        <div class="h-32 w-32 mx-auto rounded-full flex items-center justify-center text-white text-4xl font-bold mb-4" style="background-color: var(--light-orange);">
          <%= @user[:first_name][0] %><%= @user[:last_name][0] %>
        </div>
        <h2 class="text-xl font-bold text-gray-900"><%= @user[:first_name] %> <%= @user[:last_name] %></h2>
        <p class="text-sm text-gray-600 mt-1">Manager - <%= @user[:team_name] %></p>
        <span class="inline-block mt-3 px-3 py-1 text-xs font-medium rounded-full bg-green-100 text-green-800">Actif</span>
      </div>

      <div class="bg-white rounded-lg shadow border border-gray-100 p-6 mt-6">
        <h3 class="text-lg font-bold mb-4" style="color: var(--dark-purple);">Statistiques</h3>
        <dl class="space-y-3">
          <div>
            <dt class="text-sm text-gray-500">Membres d'équipe</dt>
            <dd class="text-2xl font-bold" style="color: var(--light-orange);"><%= @statistics[:team_members] %></dd>
          </div>
          <div>
            <dt class="text-sm text-gray-500">Appels de l'équipe</dt>
            <dd class="text-2xl font-bold" style="color: var(--flash-purple);"><%= @statistics[:team_calls] %></dd>
          </div>
          <div>
            <dt class="text-sm text-gray-500">Score moyen équipe</dt>
            <dd class="text-2xl font-bold" style="color: var(--dark-purple);"><%= @statistics[:team_avg_score] %>%</dd>
          </div>
        </dl>
      </div>
    </div>

    <div class="md:col-span-2">
      <div class="bg-white rounded-lg shadow border border-gray-100 p-6">
        <h3 class="text-lg font-bold mb-4" style="color: var(--dark-purple);">Informations Personnelles</h3>
        <dl class="grid grid-cols-2 gap-4">
          <div>
            <dt class="text-sm font-medium text-gray-500">Prénom</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @user[:first_name] %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Nom</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @user[:last_name] %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Email</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @user[:email] %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Téléphone</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @user[:phone] %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Rôle</dt>
            <dd class="mt-1 text-sm text-gray-900">Manager</dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Équipe</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @user[:team_name] %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Manager depuis</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @statistics[:manager_since] %></dd>
          </div>
        </dl>
      </div>
    </div>
  </div>
</div>
