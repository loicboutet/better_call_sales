<% content_for :title, "Modifier mon Profil - WeSales" %>

<div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8">
    <h1 class="text-3xl font-bold" style="color: var(--dark-purple);">Modifier mon Profil</h1>
  </div>

  <%= form_with url: manager_profil_path, method: :patch, class: "space-y-6" do |f| %>
    <div class="bg-white rounded-lg shadow border border-gray-100 p-6 space-y-4">
      <div class="grid grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Prénom</label>
          <input type="text" name="first_name" value="<%= @user[:first_name] %>" required class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-orange-500">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Nom</label>
          <input type="text" name="last_name" value="<%= @user[:last_name] %>" required class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-orange-500">
        </div>
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Email</label>
        <input type="email" name="email" value="<%= @user[:email] %>" required class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-orange-500">
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Téléphone</label>
        <input type="tel" name="phone" value="<%= @user[:phone] %>" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-orange-500">
      </div>
    </div>

    <div class="flex items-center justify-between">
      <%= link_to "Annuler", manager_profil_path, class: "px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50" %>
      <button type="submit" class="px-6 py-2 border border-transparent text-sm font-medium rounded-md text-white hover:opacity-90" style="background-color: var(--light-orange);">
        Enregistrer
      </button>
    </div>
  <% end %>
</div>
