<% content_for :title, "Comparaison des Membres - WeSales" %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8">
    <h1 class="text-3xl font-bold" style="color: var(--dark-purple);">Comparaison des Membres</h1>
    <p class="mt-2 text-gray-600">Comparez les performances de vos commerciaux</p>
  </div>

  <!-- Member Selection -->
  <div class="bg-white rounded-lg shadow border border-gray-100 p-6 mb-6">
    <label class="block text-sm font-medium text-gray-700 mb-3">Sélectionner les membres à comparer</label>
    <div class="flex flex-wrap gap-2">
      <% @all_members.each do |member| %>
        <label class="inline-flex items-center px-4 py-2 border-2 rounded-lg cursor-pointer <%= @selected_members.include?(member[:id].to_s) ? 'border-orange-500 bg-orange-50' : 'border-gray-300' %>">
          <input type="checkbox" name="members[]" value="<%= member[:id] %>" <%= @selected_members.include?(member[:id]) ? 'checked' : '' %> class="mr-2">
          <span class="text-sm font-medium"><%= member[:name] %></span>
        </label>
      <% end %>
    </div>
  </div>

  <!-- Comparison Table -->
  <div class="bg-white rounded-lg shadow border border-gray-100 overflow-hidden">
    <table class="min-w-full">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Membre</th>
          <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">Score Moyen</th>
          <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">CRONOS</th>
          <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">SYNTHÉON</th>
          <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">FERMION</th>
          <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">Appels</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% @members_data.each do |member| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4">
              <div class="flex items-center">
                <div class="h-10 w-10 rounded-full flex items-center justify-center text-white font-medium" style="background-color: var(--flash-purple);">
                  <%= member[:name].split.map(&:first).join %>
                </div>
                <span class="ml-3 font-medium text-gray-900"><%= member[:name] %></span>
              </div>
            </td>
            <td class="px-6 py-4 text-center">
              <span class="text-lg font-bold" style="color: var(--light-orange);"><%= member[:avg_score] %>%</span>
            </td>
            <td class="px-6 py-4 text-center">
              <div class="inline-flex flex-col items-center">
                <span class="font-bold" style="color: var(--flash-purple);"><%= member[:cronos] %>%</span>
                <div class="w-16 bg-gray-200 rounded-full h-1.5 mt-1">
                  <div class="h-1.5 rounded-full" style="width: <%= member[:cronos] %>%; background-color: var(--flash-purple);"></div>
                </div>
              </div>
            </td>
            <td class="px-6 py-4 text-center">
              <div class="inline-flex flex-col items-center">
                <span class="font-bold" style="color: var(--light-orange);"><%= member[:syntheon] %>%</span>
                <div class="w-16 bg-gray-200 rounded-full h-1.5 mt-1">
                  <div class="h-1.5 rounded-full" style="width: <%= member[:syntheon] %>%; background-color: var(--light-orange);"></div>
                </div>
              </div>
            </td>
            <td class="px-6 py-4 text-center">
              <div class="inline-flex flex-col items-center">
                <span class="font-bold" style="color: var(--dark-purple);"><%= member[:fermion] %>%</span>
                <div class="w-16 bg-gray-200 rounded-full h-1.5 mt-1">
                  <div class="h-1.5 rounded-full" style="width: <%= member[:fermion] %>%; background-color: var(--dark-purple);"></div>
                </div>
              </div>
            </td>
            <td class="px-6 py-4 text-center text-sm text-gray-500"><%= member[:calls] %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
