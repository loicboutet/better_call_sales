<% content_for :title, "Appels de #{@member[:name]} - WeSales" %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-4">
    <%= link_to manager_equipe_membre_path(@member[:id]), class: "inline-flex items-center text-sm font-medium hover:underline", style: "color: var(--light-orange);" do %>
      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      Retour au profil
    <% end %>
  </div>

  <div class="mb-8">
    <h1 class="text-3xl font-bold" style="color: var(--dark-purple);">Appels de <%= @member[:name] %></h1>
    <p class="mt-2 text-gray-600">Historique complet des appels</p>
  </div>

  <div class="bg-white rounded-lg shadow border border-gray-100">
    <div class="p-6 space-y-4">
      <% @calls.each do |call| %>
        <%= link_to manager_appel_path(call[:id]), class: "block border border-gray-200 rounded-lg p-4 hover:border-orange-300 transition-colors" do %>
          <div class="flex items-start justify-between">
            <div class="flex-1">
              <h3 class="font-semibold text-gray-900"><%= call[:title] %></h3>
              <div class="mt-2 flex items-center space-x-4 text-sm text-gray-600">
                <span><%= l(call[:date], format: :short) %></span>
                <span class="px-2 py-1 text-xs rounded-full" style="background-color: var(--cream-orange); color: var(--dark-purple);"><%= call[:methodology] %></span>
              </div>
            </div>
            <% if call[:status] == "analyzed" %>
              <div class="text-right">
                <div class="text-2xl font-bold" style="color: var(--light-orange);"><%= call[:score] %>%</div>
                <div class="text-xs text-gray-500"><%= call[:score] * call[:max_score] / 100 %>/<%= call[:max_score] %></div>
              </div>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
