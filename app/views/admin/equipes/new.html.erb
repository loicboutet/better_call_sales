<% content_for :title, "Nouvelle Équipe - Administration" %>

<div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8">
    <h1 class="text-3xl font-bold" style="color: var(--dark-purple);">Nouvelle Équipe</h1>
  </div>

  <%= form_with url: admin_equipes_path, method: :post, class: "space-y-6" do |f| %>
    <div class="bg-white rounded-lg shadow border border-gray-100 p-6 space-y-4">
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Nom de l'équipe *</label>
        <input type="text" name="name" required class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-purple-500">
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Description</label>
        <textarea name="description" rows="3" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-purple-500"></textarea>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Manager</label>
        <select name="manager_id" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-purple-500">
          <option value="">Aucun manager</option>
          <% @managers.each do |manager| %>
            <option value="<%= manager[:id] %>"><%= manager[:name] %></option>
          <% end %>
        </select>
      </div>
    </div>

    <div class="flex items-center justify-between">
      <%= link_to "Annuler", admin_equipes_path, class: "px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50" %>
      <button type="submit" class="px-6 py-2 border border-transparent text-sm font-medium rounded-md text-white hover:opacity-90" style="background-color: var(--light-orange);">
        Créer l'équipe
      </button>
    </div>
  <% end %>
</div>
