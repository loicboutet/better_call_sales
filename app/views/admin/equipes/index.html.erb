<% content_for :title, "Équipes - Administration WeSales" %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8 flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-bold" style="color: var(--dark-purple);">Équipes</h1>
      <p class="mt-2 text-gray-600">Gérez les équipes commerciales</p>
    </div>
    <%= link_to new_admin_equipe_path, class: "px-4 py-2 border border-transparent rounded-md text-sm font-medium text-white hover:opacity-90", style: "background-color: var(--light-orange);" do %>
      <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
      </svg>
      Nouvelle équipe
    <% end %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @teams.each do |team| %>
      <%= link_to admin_equipe_path(team[:id]), class: "block bg-white rounded-lg shadow border border-gray-100 p-6 hover:border-orange-300 transition-colors" do %>
        <div class="flex items-start justify-between mb-4">
          <h3 class="text-xl font-bold" style="color: var(--dark-purple);"><%= team[:name] %></h3>
          <span class="px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800"><%= team[:status] == 'active' ? 'Active' : 'Inactive' %></span>
        </div>
        <dl class="space-y-2 text-sm">
          <div class="flex justify-between">
            <dt class="text-gray-500">Manager</dt>
            <dd class="font-medium text-gray-900"><%= team[:manager] %></dd>
          </div>
          <div class="flex justify-between">
            <dt class="text-gray-500">Membres</dt>
            <dd class="font-medium text-gray-900"><%= team[:members_count] %></dd>
          </div>
          <div class="flex justify-between">
            <dt class="text-gray-500">Score moyen</dt>
            <dd class="font-bold" style="color: var(--light-orange);"><%= team[:avg_score] %>%</dd>
          </div>
        </dl>
      <% end %>
    <% end %>
  </div>
</div>
