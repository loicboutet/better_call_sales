<% content_for :title, "Administration - WeSales" %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8">
    <h1 class="text-3xl font-bold" style="color: var(--dark-purple);">Administration</h1>
    <p class="mt-2 text-gray-600">Vue d'ensemble de la plateforme WeSales</p>
  </div>

  <!-- Stats Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-6 mb-8">
    <div class="bg-white rounded-lg shadow p-6 border border-gray-100">
      <p class="text-sm font-medium text-gray-600">Utilisateurs</p>
      <p class="mt-2 text-3xl font-bold" style="color: var(--dark-purple);"><%= @platform_stats[:total_users] %></p>
      <p class="text-xs text-gray-500 mt-1"><%= @user_stats[:active_users] %> actifs</p>
    </div>

    <div class="bg-white rounded-lg shadow p-6 border border-gray-100">
      <p class="text-sm font-medium text-gray-600">Équipes</p>
      <p class="mt-2 text-3xl font-bold" style="color: var(--flash-purple);"><%= @platform_stats[:total_teams] %></p>
    </div>

    <div class="bg-white rounded-lg shadow p-6 border border-gray-100">
      <p class="text-sm font-medium text-gray-600">Total Appels</p>
      <p class="mt-2 text-3xl font-bold" style="color: var(--light-orange);"><%= @platform_stats[:total_calls] %></p>
    </div>

    <div class="bg-white rounded-lg shadow p-6 border border-gray-100">
      <p class="text-sm font-medium text-gray-600">Analysés</p>
      <p class="mt-2 text-3xl font-bold text-green-600"><%= @platform_stats[:analyzed_calls] %></p>
    </div>

    <div class="bg-white rounded-lg shadow p-6 border border-gray-100">
      <p class="text-sm font-medium text-gray-600">Score Moyen</p>
      <p class="mt-2 text-3xl font-bold" style="color: var(--flash-purple);"><%= @platform_stats[:avg_platform_score] %>%</p>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- User Breakdown -->
    <div class="bg-white rounded-lg shadow border border-gray-100 p-6">
      <h2 class="text-xl font-bold mb-4" style="color: var(--dark-purple);">Utilisateurs par Rôle</h2>
      <div class="space-y-3">
        <div class="flex items-center justify-between">
          <span class="text-sm text-gray-700">Commerciaux</span>
          <span class="text-lg font-bold" style="color: var(--flash-purple);"><%= @user_stats[:sales_reps] %></span>
        </div>
        <div class="flex items-center justify-between">
          <span class="text-sm text-gray-700">Managers</span>
          <span class="text-lg font-bold" style="color: var(--light-orange);"><%= @user_stats[:managers] %></span>
        </div>
        <div class="flex items-center justify-between">
          <span class="text-sm text-gray-700">Administrateurs</span>
          <span class="text-lg font-bold" style="color: var(--dark-purple);"><%= @user_stats[:admins] %></span>
        </div>
      </div>
    </div>

    <!-- Call Distribution -->
    <div class="bg-white rounded-lg shadow border border-gray-100 p-6">
      <h2 class="text-xl font-bold mb-4" style="color: var(--dark-purple);">Distribution des Appels</h2>
      <div class="space-y-2">
        <% @call_distribution.each do |type, count| %>
          <div>
            <div class="flex justify-between mb-1 text-sm">
              <span class="text-gray-700"><%= type.to_s.humanize %></span>
              <span class="font-bold"><%= count %></span>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-2">
              <div class="h-2 rounded-full" style="width: <%= (count.to_f / @platform_stats[:total_calls] * 100) %>%; background-color: var(--flash-purple);"></div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Recent Activity -->
    <div class="bg-white rounded-lg shadow border border-gray-100 p-6">
      <h2 class="text-xl font-bold mb-4" style="color: var(--dark-purple);">Activité Récente</h2>
      <div class="space-y-3">
        <% @recent_activity.each do |activity| %>
          <div class="text-sm">
            <p class="text-gray-900"><%= activity[:message] %></p>
            <p class="text-xs text-gray-500"><%= time_ago_in_words(activity[:time]) %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="mt-8 grid grid-cols-1 md:grid-cols-3 gap-6">
    <%= link_to new_admin_utilisateur_path, class: "block bg-white rounded-lg shadow p-6 border-2 border-dashed border-gray-300 hover:border-purple-400 transition-colors text-center" do %>
      <svg class="mx-auto h-12 w-12 mb-3" style="color: var(--flash-purple);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"/>
      </svg>
      <h3 class="text-lg font-medium text-gray-900">Nouvel Utilisateur</h3>
    <% end %>

    <%= link_to new_admin_equipe_path, class: "block bg-white rounded-lg shadow p-6 border-2 border-dashed border-gray-300 hover:border-purple-400 transition-colors text-center" do %>
      <svg class="mx-auto h-12 w-12 mb-3" style="color: var(--light-orange);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
      </svg>
      <h3 class="text-lg font-medium text-gray-900">Nouvelle Équipe</h3>
    <% end %>

    <%= link_to admin_analyses_path, class: "block bg-white rounded-lg shadow p-6 border-2 border-gray-200 hover:border-purple-400 transition-colors text-center" do %>
      <svg class="mx-auto h-12 w-12 mb-3" style="color: var(--dark-purple);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
      </svg>
      <h3 class="text-lg font-medium text-gray-900">Voir les Analytics</h3>
    <% end %>
  </div>
</div>
