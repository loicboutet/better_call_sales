<% content_for :title, "Paramètres - Administration" %>

<div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8">
    <h1 class="text-3xl font-bold" style="color: var(--dark-purple);">Paramètres de la Plateforme</h1>
    <p class="mt-2 text-gray-600">Configuration générale et API</p>
  </div>

  <!-- Quick Links -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
    <%= link_to admin_parametres_api_path, class: "block bg-white rounded-lg shadow-lg p-8 border-2 border-gray-200 hover:border-purple-400 transition-colors" do %>
      <div class="flex items-center mb-4">
        <div class="p-3 rounded-lg mr-4" style="background-color: var(--cream-orange);">
          <svg class="h-10 w-10" style="color: var(--flash-purple);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/>
          </svg>
        </div>
        <div>
          <h3 class="text-lg font-bold text-gray-900">Configuration API</h3>
          <p class="text-sm text-gray-600">Eleven Labs / Praxi</p>
        </div>
      </div>
      <div class="flex items-center justify-between">
        <span class="text-sm text-gray-600">Provider actuel : <strong>Eleven Labs</strong></span>
        <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
      </div>
    <% end %>

    <div class="bg-white rounded-lg shadow-lg p-8 border-2 border-gray-200">
      <div class="flex items-center mb-4">
        <div class="p-3 rounded-lg mr-4" style="background-color: var(--cream-orange);">
          <svg class="h-10 w-10" style="color: var(--dark-purple);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4"/>
          </svg>
        </div>
        <div>
          <h3 class="text-lg font-bold text-gray-900">Stockage</h3>
          <p class="text-sm text-gray-600">Espace utilisé</p>
        </div>
      </div>
      <div>
        <div class="flex items-center justify-between mb-2">
          <span class="text-sm text-gray-600">Utilisé</span>
          <span class="text-sm font-bold" style="color: var(--flash-purple);">7.4 GB / 100 GB</span>
        </div>
        <div class="w-full bg-gray-200 rounded-full h-2">
          <div class="h-2 rounded-full" style="width: 7.4%; background-color: var(--flash-purple);"></div>
        </div>
      </div>
    </div>
  </div>

  <%= form_with url: admin_parametres_path, method: :patch, class: "space-y-6" do |f| %>
    <div class="bg-white rounded-lg shadow border border-gray-100 p-6">
      <h2 class="text-xl font-bold mb-6" style="color: var(--dark-purple);">Paramètres Généraux</h2>
      <div class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Nom de la plateforme</label>
          <input type="text" name="platform_name" value="<%= @settings[:platform_name] %>" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-purple-500">
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Taille maximale des fichiers (Mo)</label>
          <input type="number" name="max_file_size" value="<%= @settings[:max_file_size] %>" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-purple-500">
          <p class="mt-1 text-xs text-gray-500">Limite pour les fichiers audio uploadés</p>
        </div>
      </div>
    </div>

    <div class="flex items-center justify-end">
      <button type="submit" class="px-6 py-2 border border-transparent text-sm font-medium rounded-md text-white hover:opacity-90" style="background-color: var(--flash-purple);">
        Enregistrer les paramètres
      </button>
    </div>
  <% end %>
</div>
