<% content_for :title, "Configuration API - Administration" %>

<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8">
    <h1 class="text-3xl font-bold" style="color: var(--dark-purple);">Configuration API</h1>
    <p class="mt-2 text-gray-600">Paramétrage de l'API de transcription</p>
  </div>

  <%= form_with url: admin_parametres_api_path, method: :patch, class: "space-y-6" do |f| %>
    <div class="bg-white rounded-lg shadow border border-gray-100 p-6">
      <h2 class="text-xl font-bold mb-4" style="color: var(--dark-purple);">Fournisseur de Transcription</h2>
      <div class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Provider</label>
          <select name="transcription_provider" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-purple-500">
            <option value="eleven_labs" <%= @api_settings[:transcription_provider] == 'eleven_labs' ? 'selected' : '' %>>Eleven Labs (Recommandé)</option>
            <option value="praxi" <%= @api_settings[:transcription_provider] == 'praxi' ? 'selected' : '' %>>Praxi</option>
          </select>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Clé API</label>
          <input type="password" name="api_key" value="<%= @api_settings[:api_key] %>" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-purple-500">
          <p class="text-xs text-gray-500 mt-1">Gardée confidentielle et chiffrée</p>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Endpoint API</label>
          <input type="url" name="endpoint" value="<%= @api_settings[:endpoint] %>" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-purple-500">
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Timeout (secondes)</label>
          <input type="number" name="timeout" value="<%= @api_settings[:timeout] %>" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-purple-500">
        </div>
      </div>
    </div>

    <div class="flex items-center justify-between">
      <%= link_to "Retour", admin_parametres_path, class: "px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50" %>
      <button type="submit" class="px-6 py-2 border border-transparent text-sm font-medium rounded-md text-white hover:opacity-90" style="background-color: var(--flash-purple);">
        Enregistrer
      </button>
    </div>
  <% end %>
</div>
