<% content_for :title, "#{@user[:first_name]} #{@user[:last_name]} - Administration" %>

<div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-4">
    <%= link_to admin_utilisateurs_path, class: "inline-flex items-center text-sm font-medium hover:underline", style: "color: var(--flash-purple);" do %>
      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      Retour aux utilisateurs
    <% end %>
  </div>

  <div class="mb-8 flex items-start justify-between">
    <div class="flex items-center">
      <div class="h-20 w-20 rounded-full flex items-center justify-center text-white text-2xl font-bold mr-4" 
           style="background-color: <%= @user[:role] == 'admin' ? 'var(--dark-purple)' : @user[:role] == 'manager' ? 'var(--light-orange)' : 'var(--flash-purple)' %>;">
        <%= @user[:first_name][0] %><%= @user[:last_name][0] %>
      </div>
      <div>
        <h1 class="text-3xl font-bold" style="color: var(--dark-purple);"><%= @user[:first_name] %> <%= @user[:last_name] %></h1>
        <p class="text-gray-600 mt-1"><%= @user[:email] %></p>
      </div>
    </div>
    <%= link_to edit_admin_utilisateur_path(@user[:id]), class: "px-4 py-2 border border-transparent rounded-md text-sm font-medium text-white hover:opacity-90", style: "background-color: var(--flash-purple);" do %>
      Modifier
    <% end %>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <div class="lg:col-span-2 space-y-6">
      <div class="bg-white rounded-lg shadow border border-gray-100 p-6">
        <h2 class="text-xl font-bold mb-4" style="color: var(--dark-purple);">Informations</h2>
        <dl class="grid grid-cols-2 gap-4">
          <div>
            <dt class="text-sm text-gray-500">Email</dt>
            <dd class="text-sm font-medium text-gray-900"><%= @user[:email] %></dd>
          </div>
          <div>
            <dt class="text-sm text-gray-500">Téléphone</dt>
            <dd class="text-sm font-medium text-gray-900"><%= @user[:phone] %></dd>
          </div>
          <div>
            <dt class="text-sm text-gray-500">Rôle</dt>
            <dd><span class="px-2 py-1 text-xs font-semibold rounded-full <%= @user[:role] == 'admin' ? 'bg-purple-100 text-purple-800' : @user[:role] == 'manager' ? 'bg-orange-100 text-orange-800' : 'bg-blue-100 text-blue-800' %>">
              <%= @user[:role] == 'admin' ? 'Administrateur' : @user[:role] == 'manager' ? 'Manager' : 'Commercial' %>
            </span></dd>
          </div>
          <div>
            <dt class="text-sm text-gray-500">Équipe</dt>
            <dd class="text-sm font-medium text-gray-900"><%= @user[:team_name] || "Aucune" %></dd>
          </div>
          <div>
            <dt class="text-sm text-gray-500">Statut</dt>
            <dd><span class="px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">Actif</span></dd>
          </div>
          <div>
            <dt class="text-sm text-gray-500">Membre depuis</dt>
            <dd class="text-sm font-medium text-gray-900"><%= l(@user[:created_at], format: :long) %></dd>
          </div>
        </dl>
      </div>

      <% if @user[:role] == "sales_rep" %>
        <div class="bg-white rounded-lg shadow border border-gray-100 p-6">
          <h2 class="text-xl font-bold mb-4" style="color: var(--dark-purple);">Statistiques</h2>
          <div class="grid grid-cols-3 gap-4 text-center">
            <div>
              <p class="text-2xl font-bold" style="color: var(--flash-purple);"><%= @user[:total_calls] %></p>
              <p class="text-sm text-gray-600">Appels</p>
            </div>
            <div>
              <p class="text-2xl font-bold" style="color: var(--light-orange);"><%= @user[:avg_score] %>%</p>
              <p class="text-sm text-gray-600">Score moyen</p>
            </div>
            <div>
              <p class="text-2xl font-bold text-green-600"><%= time_ago_in_words(@user[:last_sign_in_at]) %></p>
              <p class="text-sm text-gray-600">Dernière connexion</p>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="lg:col-span-1">
      <div class="bg-white rounded-lg shadow border border-gray-100 p-6">
        <h3 class="text-lg font-bold mb-4" style="color: var(--dark-purple);">Actions</h3>
        <div class="space-y-2">
          <%= link_to edit_admin_utilisateur_path(@user[:id]), class: "block w-full px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50 text-center" do %>
            Modifier l'utilisateur
          <% end %>
          <%= button_to admin_utilisateur_path(@user[:id]), method: :delete, data: { confirm: "Êtes-vous sûr ?" }, class: "block w-full px-4 py-2 border border-red-300 rounded-md text-sm font-medium text-red-700 hover:bg-red-50 text-center" do %>
            Supprimer l'utilisateur
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
