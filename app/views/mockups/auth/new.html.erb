<% content_for :title, "Connexion - WeSales" %>

<div class="min-h-screen flex">
  <!-- Left Side - Branding -->
  <div class="hidden lg:flex lg:w-1/2 items-center justify-center p-12" style="background: linear-gradient(135deg, #2B0E5D 0%, #6625CC 100%);">
    <div class="max-w-md">
      <!-- WeSales en texte blanc au lieu du logo -->
      <h1 class="text-6xl font-black text-white mb-6">WeSales</h1>
      <h2 class="text-2xl font-bold text-white mb-6">Analysez vos appels commerciaux</h2>
      <p class="text-lg text-purple-100 mb-12">
        Améliorez vos performances grâce à la méthodologie Better Call Sales
      </p>
      
      <div class="space-y-6">
        <div class="flex items-start">
          <div class="flex-shrink-0 h-10 w-10 rounded-full bg-white bg-opacity-20 flex items-center justify-center mr-4">
            <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
          </div>
          <div class="text-white">
            <p class="font-semibold text-lg mb-1">Analyse automatique</p>
            <p class="text-sm text-purple-200">Transcription et évaluation méthodologique</p>
          </div>
        </div>
        
        <div class="flex items-start">
          <div class="flex-shrink-0 h-10 w-10 rounded-full bg-white bg-opacity-20 flex items-center justify-center mr-4">
            <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
          </div>
          <div class="text-white">
            <p class="font-semibold text-lg mb-1">Suivi de progression</p>
            <p class="text-sm text-purple-200">Évoluez grâce aux recommandations personnalisées</p>
          </div>
        </div>
        
        <div class="flex items-start">
          <div class="flex-shrink-0 h-10 w-10 rounded-full bg-white bg-opacity-20 flex items-center justify-center mr-4">
            <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
          </div>
          <div class="text-white">
            <p class="font-semibold text-lg mb-1">Gestion d'équipe</p>
            <p class="text-sm text-purple-200">Vue consolidée des performances collectives</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Right Side - Login Form -->
  <div class="flex-1 flex items-center justify-center p-8 bg-gray-50">
    <div class="max-w-md w-full">
      <!-- Mobile Logo/Title -->
      <div class="lg:hidden text-center mb-8">
        <h1 class="text-4xl font-black mb-2" style="color: var(--dark-purple);">WeSales</h1>
      </div>

      <div class="bg-white rounded-2xl shadow-xl p-8">
        <div class="text-center mb-8">
          <h2 class="text-2xl font-bold" style="color: var(--dark-purple);">Connexion</h2>
          <p class="mt-2 text-sm text-gray-600">Accédez à votre espace WeSales</p>
        </div>

        <!-- Login Form -->
        <%= form_with url: mockups_login_path, method: :post, class: "space-y-5" do |f| %>
          <div>
            <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
              Adresse email
            </label>
            <input id="email" 
                   name="email" 
                   type="email" 
                   required 
                   autocomplete="email"
                   class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent"
                   placeholder="votre.email@exemple.com">
          </div>

          <div>
            <label for="password" class="block text-sm font-medium text-gray-700 mb-2">
              Mot de passe
            </label>
            <input id="password" 
                   name="password" 
                   type="password" 
                   required 
                   autocomplete="current-password"
                   class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent"
                   placeholder="••••••••">
          </div>

          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <input id="remember_me" 
                     name="remember_me" 
                     type="checkbox" 
                     class="h-4 w-4 rounded border-gray-300 text-purple-600 focus:ring-purple-500">
              <label for="remember_me" class="ml-2 block text-sm text-gray-700">
                Se souvenir de moi
              </label>
            </div>

            <%= link_to "Mot de passe oublié ?", mockups_forgot_password_path, class: "text-sm font-medium hover:underline", style: "color: var(--flash-purple);" %>
          </div>

          <!-- Role selector for demo -->
          <div class="border-t border-gray-200 pt-4 mt-4">
            <label class="block text-xs font-medium text-gray-500 mb-2">
              (Démo) Se connecter en tant que :
            </label>
            <select name="role" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 text-sm">
              <option value="commercial">Commercial</option>
              <option value="manager">Manager</option>
              <option value="admin">Administrateur</option>
            </select>
          </div>

          <button type="submit" 
                  class="w-full flex justify-center items-center py-3 px-4 border border-transparent rounded-lg text-base font-medium text-white hover:opacity-90 transition-opacity"
                  style="background-color: var(--flash-purple);">
            Se connecter
          </button>
        <% end %>
      </div>

      <!-- Footer -->
      <div class="mt-8 text-center">
        <p class="text-sm text-gray-500">
          © 2025 WeSales - Tous droits réservés
        </p>
      </div>
    </div>
  </div>
</div>
