<% content_for :title, "Réinitialiser le mot de passe - WeSales" %>

<div class="min-h-screen flex">
  <!-- Left Side - Branding -->
  <div class="hidden lg:flex lg:w-1/2 items-center justify-center p-12" style="background: linear-gradient(135deg, #2B0E5D 0%, #6625CC 100%);">
    <div class="max-w-md">
      <h1 class="text-6xl font-black text-white mb-6">WeSales</h1>
      <h2 class="text-2xl font-bold text-white mb-6">Nouveau mot de passe</h2>
      <p class="text-lg text-purple-100 mb-12">
        Choisissez un mot de passe sécurisé pour protéger votre compte.
      </p>
      
      <div class="bg-white bg-opacity-10 rounded-lg p-6 border border-white border-opacity-20">
        <h4 class="text-sm font-semibold text-white mb-3">Conseils de sécurité :</h4>
        <ul class="space-y-2 text-sm text-purple-100">
          <li class="flex items-start">
            <svg class="w-4 h-4 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            Minimum 8 caractères
          </li>
          <li class="flex items-start">
            <svg class="w-4 h-4 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            Mélange de lettres et chiffres
          </li>
          <li class="flex items-start">
            <svg class="w-4 h-4 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            Évitez les mots du dictionnaire
          </li>
        </ul>
      </div>
    </div>
  </div>

  <!-- Right Side - Form -->
  <div class="flex-1 flex items-center justify-center p-8 bg-gray-50">
    <div class="max-w-md w-full">
      <!-- Mobile Title -->
      <div class="lg:hidden text-center mb-8">
        <h1 class="text-4xl font-black mb-2" style="color: var(--dark-purple);">WeSales</h1>
      </div>

      <div class="bg-white rounded-2xl shadow-xl p-8">
        <div class="text-center mb-8">
          <h2 class="text-2xl font-bold" style="color: var(--dark-purple);">Nouveau mot de passe</h2>
          <p class="mt-2 text-sm text-gray-600">Choisissez un mot de passe sécurisé</p>
        </div>

        <%= form_with url: mockups_reset_password_path(token: @token), method: :patch, class: "space-y-5" do |f| %>
          <input type="hidden" name="token" value="<%= @token %>">
          
          <div>
            <label for="password" class="block text-sm font-medium text-gray-700 mb-2">
              Nouveau mot de passe
            </label>
            <input id="password" 
                   name="password" 
                   type="password" 
                   required 
                   minlength="8"
                   class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent"
                   placeholder="••••••••">
            <p class="mt-1 text-xs text-gray-500">Minimum 8 caractères</p>
          </div>

          <div>
            <label for="password_confirmation" class="block text-sm font-medium text-gray-700 mb-2">
              Confirmer le mot de passe
            </label>
            <input id="password_confirmation" 
                   name="password_confirmation" 
                   type="password" 
                   required 
                   minlength="8"
                   class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent"
                   placeholder="••••••••">
          </div>

          <button type="submit" 
                  class="w-full flex justify-center py-3 px-4 border border-transparent rounded-lg text-base font-medium text-white hover:opacity-90 transition-opacity"
                  style="background-color: var(--flash-purple);">
            Réinitialiser le mot de passe
          </button>

          <div class="text-center pt-4 border-t border-gray-200">
            <%= link_to mockups_login_path, class: "inline-flex items-center text-sm font-medium hover:underline", style: "color: var(--flash-purple);" do %>
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
              </svg>
              Retour à la connexion
            <% end %>
          </div>
        <% end %>
      </div>

      <!-- Footer -->
      <div class="mt-8 text-center">
        <p class="text-sm text-gray-500">
          © 2025 WeSales - Tous droits réservés
        </p>
      </div>
    </div>
  </div>
</div>
