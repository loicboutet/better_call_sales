<% content_for :title, "WeSales - Mockups Explorer" %>

<div class="w-full min-h-screen bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Header -->
    <div class="text-center mb-12">
      <%= image_tag "logo_long.png", class: "h-16 mx-auto mb-6", alt: "WeSales" %>
      <h1 class="text-4xl font-bold mb-4" style="color: var(--dark-purple);">Mockup Journey Explorer</h1>
      <p class="text-xl text-gray-600">Explorez les parcours utilisateurs de WeSales</p>
    </div>

    <!-- Quick Access to Auth -->
    <div class="mb-8 text-center">
      <%= link_to mockups_login_path, class: "inline-flex items-center px-6 py-3 border border-transparent rounded-lg text-sm font-medium text-white hover:opacity-90", style: "background-color: var(--flash-purple);" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"/>
        </svg>
        Voir la page de connexion
      <% end %>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-8">
      <!-- Commercial Journey Card -->
      <div class="bg-white p-6 rounded-lg shadow-lg border-2" style="border-color: var(--flash-purple);">
        <div class="flex items-center mb-4">
          <div class="h-12 w-12 rounded-full flex items-center justify-center text-white mr-4" style="background-color: var(--flash-purple);">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
            </svg>
          </div>
          <div>
            <h2 class="text-2xl font-bold" style="color: var(--dark-purple);">Commercial</h2>
            <p class="text-sm text-gray-600">11 vues</p>
          </div>
        </div>
        
        <p class="text-gray-600 mb-6">Interface complète pour les commerciaux avec analyse méthodologique.</p>

        <%= link_to "Explorer →", commercial_dashboard_path, class: "block w-full text-center px-4 py-3 text-sm font-medium rounded-md text-white hover:opacity-90", style: "background-color: var(--flash-purple);" %>
      </div>
      
      <!-- Manager Journey Card -->
      <div class="bg-white p-6 rounded-lg shadow-lg border-2" style="border-color: var(--light-orange);">
        <div class="flex items-center mb-4">
          <div class="h-12 w-12 rounded-full flex items-center justify-center text-white mr-4" style="background-color: var(--light-orange);">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
            </svg>
          </div>
          <div>
            <h2 class="text-2xl font-bold" style="color: var(--dark-purple);">Manager</h2>
            <p class="text-sm text-gray-600">14 vues</p>
          </div>
        </div>
        
        <p class="text-gray-600 mb-6">Gestion d'équipe et analyse des performances.</p>

        <%= link_to "Explorer →", manager_dashboard_path, class: "block w-full text-center px-4 py-3 text-sm font-medium rounded-md text-white hover:opacity-90", style: "background-color: var(--light-orange);" %>
      </div>
      
      <!-- Admin Journey Card -->
      <div class="bg-white p-6 rounded-lg shadow-lg border-2" style="border-color: var(--dark-purple);">
        <div class="flex items-center mb-4">
          <div class="h-12 w-12 rounded-full flex items-center justify-center text-white mr-4" style="background-color: var(--dark-purple);">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
          </div>
          <div>
            <h2 class="text-2xl font-bold" style="color: var(--dark-purple);">Admin</h2>
            <p class="text-sm text-gray-600">20 vues</p>
          </div>
        </div>
        
        <p class="text-gray-600 mb-6">Configuration plateforme et gestion utilisateurs.</p>

        <%= link_to "Explorer →", admin_dashboard_path, class: "block w-full text-center px-4 py-3 text-sm font-medium rounded-md text-white hover:opacity-90", style: "background-color: var(--dark-purple);" %>
      </div>
    </div>

    <!-- Footer Info -->
    <div class="mt-12 text-center">
      <p class="text-sm text-gray-600">
        Déploiement automatique sur 
        <a href="https://better-call-sales.5000.dev" target="_blank" class="font-medium underline" style="color: var(--flash-purple);">better-call-sales.5000.dev</a>
      </p>
    </div>
  </div>
</div>

<style>
  :root {
    --dark-purple: #2B0E5D;
    --flash-purple: #6625CC;
    --light-orange: #FF9A65;
    --cream-orange: #FCDFC9;
    --noir: #110624;
  }
</style>
