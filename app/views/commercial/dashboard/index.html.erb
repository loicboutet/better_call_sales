<% content_for :title, "Tableau de bord - WeSales" %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Page Header -->
  <div class="mb-8">
    <h1 class="text-3xl font-bold" style="color: var(--dark-purple);">Tableau de bord</h1>
    <p class="mt-2 text-gray-600">Bienvenue Sophie ! Voici un aperçu de vos performances.</p>
  </div>

  <!-- Stats Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <!-- Total Calls -->
    <div class="bg-white rounded-lg shadow p-6 border border-gray-100">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-600">Total Appels</p>
          <p class="mt-2 text-3xl font-bold" style="color: var(--dark-purple);"><%= @performance_stats[:total_calls] %></p>
        </div>
        <div class="p-3 rounded-lg" style="background-color: var(--cream-orange);">
          <svg class="w-8 h-8" style="color: var(--flash-purple);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
          </svg>
        </div>
      </div>
    </div>

    <!-- Average Score -->
    <div class="bg-white rounded-lg shadow p-6 border border-gray-100">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-600">Score Moyen</p>
          <p class="mt-2 text-3xl font-bold" style="color: var(--flash-purple);"><%= @performance_stats[:avg_score] %>%</p>
        </div>
        <div class="p-3 rounded-lg" style="background-color: var(--cream-orange);">
          <svg class="w-8 h-8" style="color: var(--light-orange);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
          </svg>
        </div>
      </div>
    </div>

    <!-- Improvement Rate -->
    <div class="bg-white rounded-lg shadow p-6 border border-gray-100">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-600">Taux d'amélioration</p>
          <p class="mt-2 text-3xl font-bold" style="color: var(--light-orange);">+<%= @performance_stats[:improvement_rate] %>%</p>
        </div>
        <div class="p-3 rounded-lg" style="background-color: var(--cream-orange);">
          <svg class="w-8 h-8" style="color: var(--flash-purple);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
          </svg>
        </div>
      </div>
    </div>

    <!-- Best Methodology -->
    <div class="bg-white rounded-lg shadow p-6 border border-gray-100">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-600">Meilleure Méthodologie</p>
          <p class="mt-2 text-2xl font-bold" style="color: var(--dark-purple);"><%= @performance_stats[:best_methodology] %></p>
        </div>
        <div class="p-3 rounded-lg" style="background-color: var(--cream-orange);">
          <svg class="w-8 h-8" style="color: var(--light-orange);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"/>
          </svg>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Content Grid -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-8">
    <!-- Recent Calls -->
    <div class="lg:col-span-2">
      <div class="bg-white rounded-lg shadow border border-gray-100">
        <div class="px-6 py-4 border-b border-gray-200 flex items-center justify-between">
          <h2 class="text-xl font-bold" style="color: var(--dark-purple);">Appels Récents</h2>
          <%= link_to "Voir tout", commercial_appels_path, class: "text-sm font-medium hover:underline", style: "color: var(--flash-purple);" %>
        </div>
        <div class="p-6">
          <div class="space-y-4">
            <% @recent_calls.each do |call| %>
              <div class="border border-gray-200 rounded-lg p-4 hover:border-purple-300 transition-colors">
                <%= link_to commercial_appel_path(call[:id]), class: "block" do %>
                  <div class="flex items-start justify-between">
                    <div class="flex-1">
                      <h3 class="font-semibold text-gray-900"><%= call[:title] %></h3>
                      <div class="mt-2 flex items-center space-x-4 text-sm text-gray-600">
                        <span class="flex items-center">
                          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                          </svg>
                          <%= l(call[:date], format: :short) %>
                        </span>
                        <span class="flex items-center">
                          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                          </svg>
                          <%= "#{call[:duration] / 60} min" %>
                        </span>
                        <span class="px-2 py-1 text-xs font-medium rounded-full" style="background-color: var(--cream-orange); color: var(--dark-purple);">
                          <%= call[:methodology] %>
                        </span>
                      </div>
                    </div>
                    <div class="ml-4 flex-shrink-0">
                      <% if call[:status] == "analyzed" %>
                        <div class="text-right">
                          <div class="text-2xl font-bold" style="color: <%= call[:percentage] >= 80 ? 'var(--light-orange)' : call[:percentage] >= 60 ? 'var(--flash-purple)' : 'var(--dark-purple)' %>;">
                            <%= call[:percentage].round(1) %>%
                          </div>
                          <div class="text-xs text-gray-500"><%= call[:overall_score].round(1) %>/<%= call[:max_score] %></div>
                        </div>
                      <% else %>
                        <span class="px-3 py-1 text-xs font-medium text-gray-600 bg-gray-100 rounded-full">
                          En cours...
                        </span>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Performance by Methodology -->
    <div class="lg:col-span-1">
      <div class="bg-white rounded-lg shadow border border-gray-100 mb-6">
        <div class="px-6 py-4 border-b border-gray-200">
          <h2 class="text-xl font-bold" style="color: var(--dark-purple);">Performance par Méthodologie</h2>
        </div>
        <div class="p-6">
          <div class="space-y-4">
            <% @methodology_performance.each do |methodology, data| %>
              <div>
                <div class="flex items-center justify-between mb-2">
                  <span class="text-sm font-medium text-gray-700"><%= methodology.to_s.upcase %></span>
                  <span class="text-sm font-bold" style="color: var(--flash-purple);"><%= data[:score] %>%</span>
                </div>
                <div class="w-full bg-gray-200 rounded-full h-2">
                  <div class="h-2 rounded-full transition-all duration-500" 
                       style="width: <%= [data[:score], 100].min %>%; background-color: var(--light-orange);"></div>
                </div>
                <div class="mt-1 flex items-center justify-between text-xs text-gray-500">
                  <span><%= data[:calls] %> appels</span>
                  <span class="flex items-center">
                    <% if data[:trend] == "up" %>
                      <svg class="w-3 h-3 mr-1 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M5.293 9.707a1 1 0 010-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 01-1.414 1.414L11 7.414V15a1 1 0 11-2 0V7.414L6.707 9.707a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
                      </svg>
                    <% elsif data[:trend] == "down" %>
                      <svg class="w-3 h-3 mr-1 text-red-500" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M14.707 10.293a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 111.414-1.414L9 12.586V5a1 1 0 012 0v7.586l2.293-2.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                      </svg>
                    <% else %>
                      <svg class="w-3 h-3 mr-1 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"/>
                      </svg>
                    <% end %>
                    <%= data[:trend] == "up" ? "En hausse" : data[:trend] == "down" ? "En baisse" : "Stable" %>
                  </span>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Recommendations -->
      <div class="bg-white rounded-lg shadow border border-gray-100">
        <div class="px-6 py-4 border-b border-gray-200">
          <h2 class="text-xl font-bold" style="color: var(--dark-purple);">Recommandations</h2>
        </div>
        <div class="p-6">
          <div class="space-y-3">
            <% @recent_recommendations.each_with_index do |recommendation, index| %>
              <div class="flex">
                <div class="flex-shrink-0">
                  <div class="flex items-center justify-center h-6 w-6 rounded-full text-xs font-bold text-white" 
                       style="background-color: var(--flash-purple);">
                    <%= index + 1 %>
                  </div>
                </div>
                <p class="ml-3 text-sm text-gray-700"><%= recommendation %></p>
              </div>
            <% end %>
          </div>
          <div class="mt-4">
            <%= link_to commercial_progress_path, 
                class: "block w-full text-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white hover:opacity-90 transition-opacity",
                style: "background-color: var(--flash-purple);" do %>
              Voir ma progression détaillée
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <%= link_to new_commercial_appel_path, class: "block" do %>
      <div class="bg-white rounded-lg shadow p-6 border-2 border-dashed border-gray-300 hover:border-purple-400 transition-colors text-center">
        <svg class="mx-auto h-12 w-12 mb-3" style="color: var(--flash-purple);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        <h3 class="text-lg font-medium text-gray-900">Télécharger un appel</h3>
        <p class="mt-1 text-sm text-gray-500">Ajoutez un nouvel enregistrement pour analyse</p>
      </div>
    <% end %>

    <%= link_to commercial_progress_path, class: "block" do %>
      <div class="bg-white rounded-lg shadow p-6 border-2 border-gray-200 hover:border-purple-400 transition-colors text-center">
        <svg class="mx-auto h-12 w-12 mb-3" style="color: var(--light-orange);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
        </svg>
        <h3 class="text-lg font-medium text-gray-900">Voir ma progression</h3>
        <p class="mt-1 text-sm text-gray-500">Analysez votre évolution par méthodologie</p>
      </div>
    <% end %>
  </div>
</div>
