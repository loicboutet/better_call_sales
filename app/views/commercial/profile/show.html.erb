<% content_for :title, "Mon Profil - WeSales" %>

<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8 flex items-center justify-between">
    <h1 class="text-3xl font-bold" style="color: var(--dark-purple);">Mon Profil</h1>
    <%= link_to "Modifier", commercial_edit_profil_path, 
        class: "px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white hover:opacity-90",
        style: "background-color: var(--flash-purple);" %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
    <!-- Avatar & Quick Info -->
    <div class="md:col-span-1">
      <div class="bg-white rounded-lg shadow border border-gray-100 p-6 text-center">
        <div class="h-32 w-32 mx-auto rounded-full flex items-center justify-center text-white text-4xl font-bold mb-4"
             style="background-color: var(--flash-purple);">
          <%= @user[:first_name][0] %><%= @user[:last_name][0] %>
        </div>
        <h2 class="text-xl font-bold text-gray-900"><%= @user[:first_name] %> <%= @user[:last_name] %></h2>
        <p class="text-sm text-gray-600 mt-1"><%= @user[:team_name] %></p>
        <span class="inline-block mt-3 px-3 py-1 text-xs font-medium rounded-full bg-green-100 text-green-800">
          <%= @user[:status] == 'active' ? 'Actif' : 'Inactif' %>
        </span>
      </div>

      <div class="bg-white rounded-lg shadow border border-gray-100 p-6 mt-6">
        <h3 class="text-lg font-bold mb-4" style="color: var(--dark-purple);">Statistiques</h3>
        <dl class="space-y-3">
          <div>
            <dt class="text-sm text-gray-500">Total d'appels</dt>
            <dd class="text-2xl font-bold" style="color: var(--flash-purple);"><%= @statistics[:total_calls] %></dd>
          </div>
          <div>
            <dt class="text-sm text-gray-500">Appels analysés</dt>
            <dd class="text-2xl font-bold" style="color: var(--flash-purple);"><%= @statistics[:analyzed_calls] %></dd>
          </div>
          <div>
            <dt class="text-sm text-gray-500">Score moyen</dt>
            <dd class="text-2xl font-bold" style="color: var(--light-orange);"><%= @statistics[:average_score] %>%</dd>
          </div>
          <div>
            <dt class="text-sm text-gray-500">Meilleure méthodologie</dt>
            <dd class="text-lg font-bold" style="color: var(--dark-purple);"><%= @statistics[:best_methodology] %></dd>
          </div>
        </dl>
      </div>
    </div>

    <!-- Details -->
    <div class="md:col-span-2 space-y-6">
      <div class="bg-white rounded-lg shadow border border-gray-100 p-6">
        <h3 class="text-lg font-bold mb-4" style="color: var(--dark-purple);">Informations Personnelles</h3>
        <dl class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <dt class="text-sm font-medium text-gray-500">Prénom</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @user[:first_name] %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Nom</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @user[:last_name] %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Email</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @user[:email] %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Téléphone</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @user[:phone] %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Rôle</dt>
            <dd class="mt-1 text-sm text-gray-900">Commercial</dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Équipe</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @user[:team_name] %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Membre depuis</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @statistics[:member_since] %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Statut</dt>
            <dd class="mt-1"><span class="px-2 py-1 text-xs font-medium rounded-full bg-green-100 text-green-800">Actif</span></dd>
          </div>
        </dl>
      </div>

      <div class="bg-white rounded-lg shadow border border-gray-100 p-6">
        <h3 class="text-lg font-bold mb-4" style="color: var(--dark-purple);">Actions Rapides</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <%= link_to commercial_edit_profil_path, class: "flex items-center p-4 border border-gray-200 rounded-lg hover:border-purple-300 transition-colors" do %>
            <svg class="w-8 h-8 mr-3" style="color: var(--flash-purple);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
            </svg>
            <div>
              <p class="font-medium text-gray-900">Modifier le profil</p>
              <p class="text-xs text-gray-500">Mettre à jour vos informations</p>
            </div>
          <% end %>
          
          <%= link_to commercial_parametres_path, class: "flex items-center p-4 border border-gray-200 rounded-lg hover:border-purple-300 transition-colors" do %>
            <svg class="w-8 h-8 mr-3" style="color: var(--flash-purple);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            <div>
              <p class="font-medium text-gray-900">Paramètres</p>
              <p class="text-xs text-gray-500">Gérer vos préférences</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
