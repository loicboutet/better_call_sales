<% content_for :title, "Transcription - #{@call[:title]} - WeSales" %>

<div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-4">
    <%= link_to commercial_appel_path(@call[:id]), class: "inline-flex items-center text-sm font-medium hover:underline", style: "color: var(--flash-purple);" do %>
      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      Retour à l'appel
    <% end %>
  </div>

  <div class="mb-8">
    <h1 class="text-3xl font-bold" style="color: var(--dark-purple);">Transcription</h1>
    <p class="mt-2 text-gray-600"><%= @call[:title] %> - <%= l(@call[:date], format: :long) %></p>
  </div>

  <!-- Transcription Info -->
  <div class="bg-white rounded-lg shadow border border-gray-100 p-6 mb-6">
    <div class="flex items-center justify-between">
      <div class="flex items-center space-x-4 text-sm text-gray-600">
        <span class="flex items-center">
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129"/>
          </svg>
          Langue : <%= @transcription[:language].upcase %>
        </span>
        <span class="flex items-center">
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          Confiance : <%= (@transcription[:confidence] * 100).round(1) %>%
        </span>
        <span class="flex items-center">
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
          </svg>
          <%= @transcription[:segments].map{|s| s[:speaker]}.uniq.length %> interlocuteurs
        </span>
      </div>
      <button class="px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50">
        <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
        </svg>
        Télécharger
      </button>
    </div>
  </div>

  <!-- Transcription Segments -->
  <div class="bg-white rounded-lg shadow border border-gray-100 p-6">
    <div class="space-y-4">
      <% @transcription[:segments].each do |segment| %>
        <div class="flex items-start space-x-4 p-4 rounded-lg <%= segment[:speaker] == 'Commercial' ? 'bg-purple-50' : 'bg-gray-50' %>">
          <div class="flex-shrink-0">
            <div class="h-10 w-10 rounded-full flex items-center justify-center text-white font-medium text-sm"
                 style="background-color: <%= segment[:speaker] == 'Commercial' ? 'var(--flash-purple)' : 'var(--dark-purple)' %>;">
              <%= segment[:speaker] == 'Commercial' ? 'C' : 'P' %>
            </div>
          </div>
          <div class="flex-1 min-w-0">
            <div class="flex items-center justify-between mb-1">
              <p class="text-sm font-medium text-gray-900"><%= segment[:speaker] %></p>
              <p class="text-xs text-gray-500">
                <%= Time.at(segment[:start_time]).utc.strftime("%M:%S") %> - <%= Time.at(segment[:end_time]).utc.strftime("%M:%S") %>
              </p>
            </div>
            <p class="text-sm text-gray-700"><%= segment[:text] %></p>
            <% if segment[:confidence] %>
              <div class="mt-2 flex items-center">
                <div class="w-20 bg-gray-200 rounded-full h-1">
                  <div class="h-1 rounded-full bg-green-500" style="width: <%= (segment[:confidence] * 100).round %>%"></div>
                </div>
                <span class="ml-2 text-xs text-gray-500"><%= (segment[:confidence] * 100).round %>%</span>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="mt-6 flex justify-between">
    <%= link_to commercial_appel_path(@call[:id]), 
        class: "px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50" do %>
      Retour à l'appel
    <% end %>
    
    <%= link_to analyse_commercial_appel_path(@call[:id]),
        class: "px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white hover:opacity-90",
        style: "background-color: var(--flash-purple);" do %>
      Voir l'analyse
    <% end %>
  </div>
</div>
