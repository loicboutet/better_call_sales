<% content_for :title, "Analyse - #{@call[:title]} - WeSales" %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Back Link -->
  <div class="mb-4">
    <%= link_to commercial_appel_path(@call[:id]), class: "inline-flex items-center text-sm font-medium hover:underline", style: "color: var(--flash-purple);" do %>
      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      Retour à l'appel
    <% end %>
  </div>

  <!-- Page Header -->
  <div class="mb-8">
    <h1 class="text-3xl font-bold" style="color: var(--dark-purple);">Analyse Détaillée</h1>
    <p class="mt-2 text-gray-600"><%= @call[:title] %> - <%= l(@call[:date], format: :long) %></p>
  </div>

  <!-- Overall Score Card -->
  <div class="bg-gradient-to-r from-purple-50 to-orange-50 rounded-lg shadow-lg border-2 border-purple-200 p-8 mb-8">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 items-center">
      <div class="text-center">
        <div class="text-6xl font-bold mb-2" style="color: <%= @analysis[:percentage] >= 80 ? 'var(--light-orange)' : @analysis[:percentage] >= 60 ? 'var(--flash-purple)' : 'var(--dark-purple)' %>;">
          <%= @analysis[:percentage].round(1) %>%
        </div>
        <div class="text-sm text-gray-600">Score Global</div>
        <div class="text-xs text-gray-500 mt-1">
          <%= @analysis[:overall_score].round(1) %> / <%= @analysis[:max_score] %> points
        </div>
      </div>
      
      <div class="md:col-span-2">
        <div class="mb-2 flex items-center justify-between text-sm">
          <span class="font-medium text-gray-700">Performance</span>
          <span class="px-3 py-1 text-xs font-semibold rounded-full <%= @analysis[:performance_level] == 'excellent' ? 'bg-green-100 text-green-800' : 'bg-blue-100 text-blue-800' %>">
            <%= @analysis[:performance_level] == 'excellent' ? 'Excellent' : 'Bon' %>
          </span>
        </div>
        <div class="w-full bg-gray-200 rounded-full h-4">
          <div class="h-4 rounded-full transition-all" 
               style="width: <%= [@analysis[:percentage], 100].min %>%; background-color: <%= @analysis[:percentage] >= 80 ? 'var(--light-orange)' : @analysis[:percentage] >= 60 ? 'var(--flash-purple)' : 'var(--dark-purple)' %>;"></div>
        </div>
        <p class="mt-3 text-sm text-gray-700"><%= @analysis[:summary] %></p>
      </div>
      
      <div class="text-center">
        <div class="text-2xl font-bold mb-2" style="color: var(--flash-purple);"><%= @call[:methodology] %></div>
        <div class="text-sm text-gray-600">Méthodologie</div>
        <div class="text-xs text-gray-500 mt-1"><%= @analysis[:methodology_steps].length %> étapes analysées</div>
      </div>
    </div>
  </div>

  <!-- Key Points & Actions Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
    <!-- Key Points -->
    <div class="bg-white rounded-lg shadow border border-gray-100 p-6">
      <h2 class="text-xl font-bold mb-4 flex items-center" style="color: var(--dark-purple);">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        Points Clés
      </h2>
      <ul class="space-y-2">
        <% @analysis[:key_points].each do |point| %>
          <li class="flex items-start">
            <span class="flex-shrink-0 h-5 w-5 mr-2 mt-0.5 text-green-500">•</span>
            <span class="text-sm text-gray-700"><%= point %></span>
          </li>
        <% end %>
      </ul>
    </div>

    <!-- Action Items -->
    <div class="bg-white rounded-lg shadow border border-gray-100 p-6">
      <h2 class="text-xl font-bold mb-4 flex items-center" style="color: var(--dark-purple);">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
        </svg>
        Actions à Prendre
      </h2>
      <ul class="space-y-2">
        <% @analysis[:action_items].each do |action| %>
          <li class="flex items-start">
            <span class="flex-shrink-0 h-5 w-5 mr-2 mt-0.5" style="color: var(--light-orange);">→</span>
            <span class="text-sm text-gray-700"><%= action %></span>
          </li>
        <% end %>
      </ul>
    </div>
  </div>

  <!-- Strengths & Areas for Improvement -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
    <!-- Strengths -->
    <div class="bg-green-50 rounded-lg border border-green-200 p-6">
      <h2 class="text-lg font-bold mb-4 text-green-900 flex items-center">
        <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
        </svg>
        Points Forts
      </h2>
      <ul class="space-y-2">
        <% @analysis[:strengths].each do |strength| %>
          <li class="text-sm text-green-800"><%= strength %></li>
        <% end %>
      </ul>
    </div>

    <!-- Areas for Improvement -->
    <div class="bg-orange-50 rounded-lg border border-orange-200 p-6">
      <h2 class="text-lg font-bold mb-4 text-orange-900 flex items-center">
        <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
        </svg>
        Axes d'Amélioration
      </h2>
      <ul class="space-y-2">
        <% @analysis[:areas_for_improvement].each do |area| %>
          <li class="text-sm text-orange-800"><%= area %></li>
        <% end %>
      </ul>
    </div>
  </div>

  <!-- Methodology Steps Analysis -->
  <div class="mb-8">
    <h2 class="text-2xl font-bold mb-6" style="color: var(--dark-purple);">Analyse par Étape - Méthodologie <%= @call[:methodology] %></h2>
    
    <div class="space-y-6">
      <% @analysis[:methodology_steps].each do |step| %>
        <div class="bg-white rounded-lg shadow border border-gray-100 overflow-hidden">
          <!-- Step Header -->
          <div class="px-6 py-4 border-b border-gray-200 flex items-center justify-between" 
               style="background: linear-gradient(to right, <%= step[:performance_level] == 'optimal' ? '#dcfce7' : step[:performance_level] == 'good' ? '#dbeafe' : step[:performance_level] == 'partial' ? '#fed7aa' : '#fecaca' %>, white);">
            <div class="flex items-center space-x-4">
              <div class="flex-shrink-0 w-12 h-12 rounded-full flex items-center justify-center text-white font-bold text-lg"
                   style="background-color: var(--flash-purple);">
                <%= step[:position] %>
              </div>
              <div>
                <h3 class="text-lg font-bold text-gray-900"><%= step[:name] %></h3>
                <p class="text-sm text-gray-600">Posture attendue : <em><%= step[:posture_expected] %></em></p>
              </div>
            </div>
            
            <div class="text-right">
              <div class="text-3xl font-bold" 
                   style="color: <%= step[:performance_level] == 'optimal' ? 'var(--light-orange)' : step[:performance_level] == 'good' ? 'var(--flash-purple)' : 'var(--dark-purple)' %>;">
                <%= step[:score] %><span class="text-lg text-gray-500">/15</span>
              </div>
              <span class="inline-block mt-1 px-2 py-1 text-xs font-semibold rounded-full
                         <%= step[:performance_level] == 'optimal' ? 'bg-green-100 text-green-800' : 
                             step[:performance_level] == 'good' ? 'bg-blue-100 text-blue-800' : 
                             step[:performance_level] == 'partial' ? 'bg-orange-100 text-orange-800' : 
                             'bg-red-100 text-red-800' %>">
                <%= step[:performance_level] == 'optimal' ? 'Optimal' : 
                    step[:performance_level] == 'good' ? 'Bon' : 
                    step[:performance_level] == 'partial' ? 'Partiel' : 
                    'Insuffisant' %> (<%= step[:percentage].round(1) %>%)
              </span>
            </div>
          </div>

          <!-- Step Content -->
          <div class="p-6">
            <!-- Posture Observed -->
            <div class="mb-4 p-4 bg-gray-50 rounded-lg">
              <p class="text-sm font-medium text-gray-700 mb-1">Posture observée :</p>
              <p class="text-sm text-gray-600"><%= step[:posture_observed] %></p>
            </div>

            <!-- Criteria Grid -->
            <div class="mb-4">
              <h4 class="text-sm font-bold text-gray-900 mb-3">Évaluation des Critères (0-3 par critère)</h4>
              <div class="space-y-3">
                <% step[:criteria].each do |criterion| %>
                  <div class="border border-gray-200 rounded-lg p-4">
                    <div class="flex items-start justify-between mb-2">
                      <div class="flex-1">
                        <span class="text-sm font-medium text-gray-900"><%= criterion[:name] %></span>
                      </div>
                      <div class="flex items-center space-x-1 ml-4">
                        <% 3.times do |i| %>
                          <span class="w-6 h-6 rounded-full flex items-center justify-center text-xs font-bold
                                     <%= i < criterion[:score] ? 'text-white' : 'bg-gray-200 text-gray-400' %>"
                                style="<%= i < criterion[:score] ? 'background-color: var(--light-orange);' : '' %>">
                            <%= i + 1 %>
                          </span>
                        <% end %>
                        <span class="ml-2 text-sm font-bold" style="color: var(--flash-purple);"><%= criterion[:score] %>/3</span>
                      </div>
                    </div>
                    <p class="text-sm text-gray-600 mt-2"><%= criterion[:justification] %></p>
                  </div>
                <% end %>
              </div>
            </div>

            <!-- Recommendations -->
            <div class="mt-4 p-4 rounded-lg" style="background-color: var(--cream-orange);">
              <h4 class="text-sm font-bold mb-2" style="color: var(--dark-purple);">Recommandations pour cette étape :</h4>
              <ol class="space-y-1">
                <% step[:recommendations].each_with_index do |rec, i| %>
                  <li class="text-sm text-gray-700"><strong><%= i + 1 %>.</strong> <%= rec %></li>
                <% end %>
              </ol>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Actions -->
  <div class="flex items-center justify-between">
    <%= link_to commercial_appel_path(@call[:id]), 
        class: "px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50" do %>
      Retour à l'appel
    <% end %>
    
    <div class="flex items-center space-x-3">
      <button class="px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50">
        <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
        </svg>
        Télécharger le rapport
      </button>
      
      <%= link_to transcription_commercial_appel_path(@call[:id]),
          class: "px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white hover:opacity-90",
          style: "background-color: var(--flash-purple);" do %>
        Voir la transcription
      <% end %>
    </div>
  </div>
</div>
